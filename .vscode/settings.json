{
    // Enable ESLint for these languages
    "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "json",
    ],
    // Run ESLint on save
    "editor.codeActionsOnSave": {
        "source.fixAll": "always",
        "source.fixAll.eslint": "always"
    },
    // Disable other formatters (like Vetur or default TS formatter)
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // Format on save
    "editor.formatOnSave": true,
    // TypeScript SDK from node_modules
    "typescript.tsdk": "node_modules/typescript/lib",
    "volar.validation.template": false, // optional: handled by ESLint if you prefer
    "i18n-ally.keepFulfilled": false,
    "i18n-ally.enabledFrameworks": [
        "vue", "i18next"
    ],
    "i18n-ally.localesPaths": [
        "./**/**/src/locales"
    ],
    "i18n-ally.keystyle": "nested",
    "i18n-ally.dirStructure": "file",
    "i18n-ally.annotations": true,
}