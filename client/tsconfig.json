{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,
        "noEmit": true,
        "paths": {
            "@/shared/*": ["../server/src/shared/*"],
            "@/*": ["./src/*", "./dist/*"],
        }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "../server/src/shared/**/*.ts", "../shared/**/*.d.ts", "src/locales/*.json"],
    "exclude": ["src/api/**/*"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
