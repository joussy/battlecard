{
    "name": "Devcontainer",
    "image": "mcr.microsoft.com/vscode/devcontainers/typescript-node:22",
    "customizations": {
        "vscode": {
            "extensions": ["Vue.volar", "ms-edgedevtools.vscode-edge-devtools"]
        }
    },
    "postCreateCommand": {
        "server": "cd server && npm install",
        "client": "cd client && npm install"
    }
}
