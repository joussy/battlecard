{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "./src",
  "entryFile": "main",
  "monorepo": true,
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": false,
          "introspectComments": true,
          "skipAutoHttpCode": true
        }
      }
    ],
    "assets": [
      {
        "include": "views/*.mustache",
        "outDir": "dist",
        "watchAssets": true
      }
    ]
  }
}