{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "./src",
  "entryFile": "/server/src/main",
  "monorepo": true,
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "views/*.html",
        "outDir": "dist/server/src",
        "watchAssets": true
      }
    ]
  }
}