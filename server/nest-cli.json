{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "./src",
  "entryFile": "main",
  "monorepo": true,
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "views/*.mustache",
        "outDir": "dist",
        "watchAssets": true
      }
    ]
  }
}