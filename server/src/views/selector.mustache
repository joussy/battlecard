<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
</head>

<body>
  <style>
    table,
    th,
    td {
      border: 2px solid black;
      border-collapse: collapse;
      padding: 5px;
    }

    tbody tr:nth-child(even) {
      background-color: #f2f2f2;
    }

    .title {
      text-align: center;
      padding-bottom: 15px;
    }

    .title h3 {
      display: inline;
    }

    .table-container {
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0;
    }
  </style>
  <div class="title">
    <h3>{{title}}</h3>
    <br /><i>{{subtitle}}</i><br />
  </div>
  <div class="table-container">
    <table>
      <thead>
        <tr>
          <th>{{i18n.license}}</th>
          <th>{{i18n.last_name}}</th>
          <th>{{i18n.first_name}}</th>
          <th>{{i18n.weight}}</th>
          <th>{{i18n.category}}</th>
          <th>{{i18n.birth_date}}</th>
          <th>{{i18n.number_of_fights}}</th>
          <th>{{i18n.gym}}</th>
          <th>{{i18n.gender}}</th>
        </tr>
      </thead>
      <tbody>
        {{#boxers}}
        <tr>
          <td>{{license}}</td>
          <td>{{lastName}}</td>
          <td>{{firstName}}</td>
          <td>{{weight}}</td>
          <td>{{category}}</td>
          <td>{{birthDate}} {{age}}</td>
          <td>{{nbFights}}</td>
          <td>{{club}}</td>
          <td>{{gender}}</td>
        </tr>
        {{/boxers}}
      </tbody>
    </table>
  </div>
</body>

</html>